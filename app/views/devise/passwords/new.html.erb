<h2 class="text-center text-2xl">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/inline_errors", resource: resource, field: :base %>

  <div class="field my-4">
    <%= f.label :email, class: "text-sm" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded w-full px-2 py-1" %>
    <%= render "devise/shared/inline_errors", resource: resource, field: :email %>
  </div>

  <div class="actions my-4">
    <%= f.submit "Send me reset password instructions", class: "bg-teal-500 hover:bg-teal-700 text-white py-2 px-4 rounded inline-block w-full" %>
  </div>
<% end %>

<div class="my-4">
  <%= render "devise/shared/links" %>
</div>
