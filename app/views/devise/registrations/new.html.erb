<h2 class="text-center text-2xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/inline_errors", resource: resource, field: :base %>

  <div class="field my-4">
    <%= f.label :email, class: "text-sm" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded w-full px-2 py-1" %>
    <%= render "devise/shared/inline_errors", resource: resource, field: :email %>
  </div>

  <div class="field my-4">
    <%= f.label :password, class: "text-sm" do %>
      Password
      <% if @minimum_password_length %>
      <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "rounded w-full px-2 py-1" %>
    <%= render "devise/shared/inline_errors", resource: resource, field: :password %>
  </div>

  <div class="field my-4">
    <%= f.label :password_confirmation, class: "text-sm" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded w-full px-2 py-1" %>
    <%= render "devise/shared/inline_errors", resource: resource, field: :password_confirmation %>
  </div>

  <div class="actions my-4">
    <%= f.submit "Sign up", class: "bg-teal-500 hover:bg-teal-700 text-white py-2 px-4 rounded inline-block w-full" %>
  </div>
<% end %>

<div class="my-4">
  <%= render "devise/shared/links" %>
</div>
